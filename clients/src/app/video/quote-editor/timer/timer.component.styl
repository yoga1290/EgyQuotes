.col-xs-12, .col-sm-6
    padding: 0px;
.timer
    position: relative;
    margin-top: 10px;
    margin-left: 10px;

.timer i.btn-circle
    color: #ccc;
    border-color: #ccc;

.timer input
    border: 1px solid #ccc;
    background-color: transparent;
    color: white;
    border-radius: 5px;
    margin-bottom: 5px;
    margin-left: 5px;
    padding: 7px;
    text-align: center;
    font-size: 32px;
    /*width: 48.5%;*/
    z-index: 2;
    width: 100%;
    min-height: 50px;

.timer i.icon
    color: rgba(255, 255, 255, 0.65);
    font-size: 45px;
    margin-top: 8px;

.timer i.left.icon
    position: absolute;
    /*left: 20px;*/
    margin-left: 20px;
.timer i.left.icon:after
  content: '\e939'

.timer i.right.icon
    position: absolute;
    /*left: 48.5%;*/
    margin-left: 20px;
.timer i.right.icon:after
  content: '\e938'
